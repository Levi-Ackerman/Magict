        android:id="@+id/btn"
        android:text="摁下"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <WebView
        android:layout_below="@id/btn"
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></WebView>
</RelativeLayout>
